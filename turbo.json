{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint:check": {
      "dependsOn": ["^lint:check"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "format:fix": {
      "dependsOn": ["^format:fix"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    }
  }
}